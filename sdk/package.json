{
  "name": "@zerodust/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for ZeroDust - sweep native gas tokens to zero",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --exclude '**/integration/**'",
    "test:watch": "vitest --exclude '**/integration/**'",
    "test:coverage": "vitest run --coverage --exclude '**/integration/**'",
    "test:integration": "vitest run tests/integration",
    "test:all": "vitest run",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "zerodust",
    "ethereum",
    "eip-7702",
    "eip-712",
    "gas",
    "sweep",
    "blockchain",
    "sdk",
    "web3",
    "crypto",
    "defi",
    "evm",
    "viem",
    "typescript",
    "cross-chain",
    "bridge"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zerodustxyz/zerodust.git"
  },
  "homepage": "https://zerodust.xyz",
  "bugs": {
    "url": "https://github.com/zerodustxyz/zerodust/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "viem": "^2.21.0",
    "vitest": "^1.2.0"
  }
}
